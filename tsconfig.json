{
    "version": "2.4.2",
    "compilerOptions": {
      "lib": ["es5", "es6"],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "outDir": "./dist" // Compiles output files to the dist folder
    },
    "exclude": [
      "node_modules",
      "dist" // Exclude the output directory to prevent recursive compilation
    ]
  }  